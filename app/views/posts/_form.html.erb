
<%= form_for post do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :content %> <br>
  <%= f.text_area :content %> <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>
  <label>Enter in categories below:</label><br>
  <%= f.fields_for :categories, post.categories.build do |category| %>
    <%= category.text_field :name %><br>
  <% end %>
  <%= f.submit %>
<% end %>
